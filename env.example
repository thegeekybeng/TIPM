# TIPM Environment Variables
# Copy this to .env.local for local development

# Backend API URL - Choose based on environment:
# Local development: http://localhost:8000
# Production (Render): https://tipm-api.onrender.com
# Production (Railway): https://tipm-app.railway.app
NEXT_PUBLIC_API_BASE=http://localhost:8000

# Environment
ENVIRONMENT=development

# Optional: Custom configuration key
CUSTOM_KEY=development_key

# Note: Environment variables starting with NEXT_PUBLIC_ are exposed to the browser
# For production deployments, set these in your hosting platform (Vercel/Railway/etc.)
